<% include('../layouts/header.ejs') %>

<div class="container mt-5">
    <h2 class="text-center mb-4">Welcome, <%= admin.name %></h2>

    <div class="d-flex justify-content-center">
        <a href="/admin/dashboard" class="btn btn-primary me-3" style="text-decoration: none; font-size: large;">Dashboard</a>
        <a href="/logout" class="btn btn-danger" style="text-decoration: none; font-size: large;">Logout</a>
    </div>

    <table class="table mt-4" style="width:50%; margin: auto;">
        <tr>
            <td>Email</td>
            <td><%= admin.email %></td>
        </tr>
        <tr>
            <td>Mobile</td>
            <td><%= admin.mobile %></td>
        </tr>
    </table>
</div>

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>

<style>
    body {
        background: linear-gradient(to right, #3498db, #2c3e50);
        color: white;
    }

    h2 {
        text-align: center;
    }

    table {
        width: 100%;
        max-width: 50%;
        margin: auto;
        background-color: rgba(255, 255, 255, 0.8);
        border-radius: 8px;
        padding: 20px;
        margin-top: 20px;
    }

    .btn-primary, .btn-danger {
        font-size: large;
    }
</style>

<% include('../layouts/footer.ejs') %>
