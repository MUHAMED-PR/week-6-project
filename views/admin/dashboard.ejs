<% include('../layouts/header.ejs') %>

<div class="container mt-5">
    <h1 class="text-center mb-4">Dashboard</h1>

    <form class="mb-4">
        <div class="input-group">
            <input type="text" class="form-control" placeholder="Search User name, email, mobile" name="search">
            <button class="btn btn-primary" type="submit">Search</button>
        </div>
    </form>

    <table class="table table-bordered bg-light">
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Mobile</th>
            <th>Verified</th>
            <th>Actions</th>
        </tr>

        <% if (users.length > 0) { %>
            <% for (let i = 0; i < users.length; i++) { %>
                <tr>
                    <td><%= users[i].name %></td>
                    <td><%= users[i].email %></td>
                    <td><%= users[i].mobile %></td>
                    <td>
                        <% if (users[i].is_verified == 0) { %>
                            <p class="text-danger">Not Verified</p>
                        <% } else { %>
                            <p class="text-success">Verified</p>
                        <% } %>
                    </td>
                    <td>
                        <a href="/admin/edit-user?id=<%= users[i]._id %>" class="btn btn-primary btn-sm">Edit</a>
                        <br><br>
                        <a href="/admin/delete-user?id=<%= users[i]._id %>" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>
            <% } %>
        <% } else { %>
            <tr>
                <td colspan="5">Users are not found</td>
            </tr>
        <% } %>
    </table>

    <a href="/admin/home" class="btn btn-secondary">Go to Home</a>
</div>

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>

<style>
    body {
        background: linear-gradient(to right, #3498db, #2c3e50);
        color: white;
    }

    h1 {
        text-align: center;
    }

    form {
        max-width: 500px;
        margin: auto;
    }

    table {
        width: 100%;
        margin-top: 20px;
    }

    th, td {
        text-align: left;
    }

    .text-danger {
        color: #dc3545;
    }

    .text-success {
        color: #28a745;
    }

    .btn-secondary {
        margin-top: 20px;
    }
</style>

