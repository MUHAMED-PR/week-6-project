<% include('../layouts/header.ejs') %>

<div class="container mt-5">
    <div class="row">
        <div class="col-md-6 mx-auto">
            <h1 class="text-center">User Registration Form</h1>

            <form action="/register" method="post" class="mt-4">
                <div class="mb-3">
                    <label for="name" class="form-label">Name</label>
                    <input type="text" name="name" class="form-control" id="name" placeholder="Name" required>
                </div>
                <div class="mb-3">
                    <label for="email" class="form-label">Email</label>
                    <input type="email" name="email" class="form-control" id="email" placeholder="Email" required>
                </div>
                <div class="mb-3">
                    <label for="mobile" class="form-label">Mobile Number</label>
                    <input type="text" name="mobile" class="form-control" id="mobile" placeholder="Mobile Number" required>
                </div>
                <div class="mb-3">
                    <label for="password" class="form-label">Password</label>
                    <input type="password" name="password" class="form-control" id="password" placeholder="Password" required>
                </div>
                <button type="submit" class="btn btn-primary">Register</button>
            </form>

            <% if (typeof message !== 'undefined') { %>
                <p class="text-white  mt-3"><%= message %></p>
            <% } %>

            <p  class="mt-3">You have already an accoun    <a href="/login" class="text-black ">login page</a></p>
        </div>
    </div>
</div>

<style>
    body {
        background: linear-gradient(to right, #337fb2, #547391);
        color: white;
    }

    h1 {
        text-align: center;
    }

    form {
        background-color: rgba(255, 255, 255, 0.8);
        border-radius: 8px;
        padding: 20px;
        margin-top: 20px;
    }

    p {
        text-align: center;
        margin-top: 10px;
    }
</style>
